<h1>Listing dorms</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dorms.each do |dorm| %>
      <tr>
        <td><%= dorm.room %></td>
        <td><%= link_to 'Show', dorm %></td>
        <td><%= link_to 'Edit', edit_dorm_path(dorm) %></td>
        <td><%= link_to 'Destroy', dorm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

